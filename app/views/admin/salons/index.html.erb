<div class="index-salons">
  <main class="table-tb">
    <div class="table-logo">
      <div class="logo">
        <h4>Salons Table</h4>
      </div>
      <div class="link-new">
        <%= link_to 'New salon', new_admin_salon_path, class: 'new-salon' %>
      </div>
      <div class="paginate-salon-top">
      <%= paginate @salons %>
      </div>
      <table class="table table-bordered margin_table">
        <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Created at</th>
          <th scope="col">Updated at</th>
        </tr>
        </thead>
        <tbody>
        <% @salons.each do |salon| %>
          <tr onclick="window.location.href='<%= admin_salon_path(salon) %>'; return false" class="salon-hover">
            <%= render salon %>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="paginate-salon-bottom">
        <%= paginate @salons %>
      </div>
    </div>
  </main>
</div>