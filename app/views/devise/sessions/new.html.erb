<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="size-in-customer">
    <main class="form-in-customer">
      <div>
        <i class="far fa-user image-log-in"></i>
        <h2 class="label-log-in">Log in</h2>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: 'email',class: 'form-control borders-in-customer',
            placeholder: 'Enter your email' %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control borders-in-customer',
            placeholder: 'Enter your password' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field-remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="butt-height-log-in">
          <%= button_tag  'Log in',  class: 'btn button-customer-in'%>
        </div>
        <div class="butt-height-link-in">
          <%= link_to 'Sign up', new_customer_registration_path, class: ' btn button-customer-link-in'%>
        </div>
      </div>
      <div class="butt-height-link-in">
        <%= link_to 'Forgot password?', new_customer_password_path, class: ' btn button-customer-link-in'%>
      </div>
    </main>
  </div>
<% end %>
