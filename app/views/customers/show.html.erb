<div class="card show-customer-block" >
  <%= image_tag 'data:image/jpeg;base64,',
    alt: 'Image', target: '_blank', class: 'image-background-customer' %>
  <div class="block-customer-image">
    <% if current_customer.avatar.present? %>
      <%= image_tag current_customer.avatar.thumb.url, alt: 'Image', class: 'image-customer-show', target: '_blank'%>
    <% else %>
      <%= image_tag 'https://cdn.pixabay.com/photo/2012/04/26/19/43/profile-42914_960_720.png',
        alt: 'Image', class: 'image-customer-show', target: '_blank'%>
    <% end %>
  </div>
  <div class="customer-name-show">
    <%= current_customer.name %>
  </div>
  <div class="customer-email-show">
    <%= current_customer.email %>
  </div>
  <% if current_customer.present?%>
    <div class="edit-customer-show">
    <%= link_to edit_customer_path(current_customer) do%>
      <i class="fas fa-cog edit-setting-color"></i>
    <% end %>
    </div>
  <% end %>
</div>